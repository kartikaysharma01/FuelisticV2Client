<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fuelisticv2client">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".fuelisticv2client.UI.ui.PlaceOrder2nd" />

        <activity android:name=".fuelisticv2client.UI.ui.PlaceOrder"/>

        <activity
            android:name=".fuelisticv2client.UI.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".fuelisticv2client.LoginSignUp.VerifyOTP" />
        <activity android:name=".fuelisticv2client.LoginSignUp.SignUp3rdScreen" />
        <activity android:name=".fuelisticv2client.LoginSignUp.SignUp2ndScreen" />
        <activity android:name=".fuelisticv2client.LoginSignUp.SignUp" />
        <activity android:name=".fuelisticv2client.LoginSignUp.Login" />
        <activity android:name=".fuelisticv2client.LoginSignUp.AppStartupScreen" />
        <activity android:name=".fuelisticv2client.LoginSignUp.MainActivity" />

        <activity android:name=".fuelisticv2client.LoginSignUp.LogoSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".fuelisticv2client.Services.MyFCMServices">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>